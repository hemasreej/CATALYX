--- simple flask app ----- 
from flask import Flask

app = Flask(__name__)

@app.route('/')
def home():
    return 'Welcome to Satellite Telemetry Dashboard üöÄ, for data use  - <a href="http://127.0.0.1:5000/data" > data page</a>'
    # to include a link in between text use the above format

@app.route('/data')
def telemetry():
    return {"altitude": 420.5, "temperature": 23.7}

if __name__ == '__main__':
    app.run(debug=True)



-----  this is for databases- --------

from flask import Flask
from flask_sqlalchemy import SQLAlchemy

app = Flask(__name__)

# 1Ô∏è‚É£ Connect to your database (this uses SQLite for simplicity)
app.config['SQLALCHEMY_DATABASE_URI'] = 'sqlite:///telemetry.db'
db = SQLAlchemy(app)

# 2Ô∏è‚É£ Define a table as a Python class
class TelemetryData(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    satellite_id = db.Column(db.String(20), nullable=False)
    altitude = db.Column(db.Float)
    temperature = db.Column(db.Float)

# 3Ô∏è‚É£ Create the table
with app.app_context():
    db.create_all()

# 4Ô∏è‚É£ Insert data
data = TelemetryData(satellite_id="SAT001", altitude=400.5, temperature=25.3)
db.session.add(data)
db.session.commit()

# 5Ô∏è‚É£ Retrieve data
telemetries = TelemetryData.query.all()
for t in telemetries:
    print(t.satellite_id, t.altitude, t.temperature)
